                    </TransformGroup>
                </Button.RenderTransform>
            </Button>
            <Button x:Name="Mobilier" Content="Mobilier" Width="91" Height="28" Background="WhiteSmoke"  FontStyle="Italic" FontFamily="Caladea" FontSize="20" Cursor="IBeam" Click="Mobilier_Click" HorizontalAlignment="Left" VerticalAlignment="Top">

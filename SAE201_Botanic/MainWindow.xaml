<Window
    x:Class="SAE201_Botanic.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Botanic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Botanic"
    Width="1600"
    Height="900"
    Icon="rsc/icon_botanic.ico"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Height" Value="50" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </Window.Resources>





    <Grid Background="White">



        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button Click="Deconnexion" Content="Déconnexion" />
                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />
        </DockPanel>



        <TabControl Margin="0,32,0,0">



            <TabItem Header=" Visualiser commandes ">
                <DataGrid
                    Name="dgClients"
                    Grid.Column="1"
                    Width="1600"
                    Height="300"
                    MinHeight="150"
                    Margin="0,50,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding LesClients}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Nom}"
                            Header="Numero Commande" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Prenom}"
                            Header="Numero Magasin" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Mode de Transport" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Date de Commande" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Date de Livraison" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Mode de Livraison" />
                    </DataGrid.Columns>
                </DataGrid>
          
            </TabItem>


            <TabItem Header=" Nouvelle commande ">

                <StackPanel Margin="50,40,50,40">
                    <TextBox
                        x:Name="tbIdentifiant"
                        Width="300"
                        Height="32"
                        Padding="10,4,0,4"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFEBF3F0"
                        BorderThickness="0,0,0,0" />
                    <Button
                        Width="70"
                        Height="30"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="#FF1C9E7F"
                        BorderThickness="0"
                        Click="OuvrirFiltres"
                        Content="Filtres"
                        Foreground="White">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

            </TabItem>





        </TabControl>



    </Grid>





</Window>

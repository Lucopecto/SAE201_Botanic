<Window
    x:Class="SAE201_Botanic.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Botanic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Botanic"
    Width="1600"
    Height="900"
    Icon="rsc/icon_botanic.ico"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Height" Value="30" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>





    <Grid Background="White">



        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button
                        Click="Deconnexion"
                        Content="Déconnexion"
                        Cursor="Hand" />
                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />
        </DockPanel>



        <TabControl Margin="0,32,0,0">



            <TabItem Header=" Visualiser commandes ">
                <DataGrid
                    Name="dgClients"
                    Grid.Column="1"
                    Width="1600"
                    Height="300"
                    MinHeight="150"
                    Margin="0,50,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding LesClients}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Nom}"
                            Header="Numero Commande" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Prenom}"
                            Header="Numero Magasin" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Mode de Transport" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Date de Commande" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Date de Livraison" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Mode de Livraison" />
                    </DataGrid.Columns>
                </DataGrid>

            </TabItem>


            <TabItem Header=" Nouvelle commande ">

                <StackPanel Height="694" Margin="30,-50,30,0">

                    <StackPanel Orientation="Horizontal">

                        <TextBox
                            x:Name="tbRecherche"
                            Width="300"
                            Height="30"
                            Padding="12,4,30,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderThickness="1">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="15" />
                                </Style>
                            </TextBox.Resources>
                            <TextBox.Effect>
                                <DropShadowEffect ShadowDepth="1" Color="Gray" />
                            </TextBox.Effect>
                        </TextBox>
                        <Image
                            Width="16"
                            Height="16"
                            Margin="-40,0,0,0"
                            Source="/rsc/icone_recherche.png"
                            Stretch="Fill" />

                        <Button
                            Width="70"
                            Height="30"
                            Margin="25,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Background="#FF1C9E7F"
                            BorderThickness="0"
                            Click="OuvrirFiltres"
                            Content="Filtres"
                            Cursor="Hand"
                            Foreground="White">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5" />
                                </Style>
                            </Button.Resources>
                        </Button>

                    </StackPanel>



                    <StackPanel
                        Width="147"
                        Height="48"
                        Margin="0,500,0,0"
                        HorizontalAlignment="Right">
                        <Button
                            x:Name="AjouterCommande"
                            Width="114"
                            Height="45"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            BorderBrush="#FF868686"
                            Content="Valider">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="White" />
                                    <GradientStop Offset="1" Color="#FF8EFD70" />
                                    <GradientStop Offset="0.09" Color="White" />
                                    <GradientStop Offset="0.483" Color="#FF9DFF83" />
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="20">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                </StackPanel>

            </TabItem>





        </TabControl>



    </Grid>





</Window>

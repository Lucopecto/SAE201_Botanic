<Window
    x:Class="SAE201_Botanic.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE201_Botanic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Botanic"
    Width="1600"
    Height="900"
    Icon="rsc/icon_botanic.ico"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Height" Value="30" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>





    <Grid Background="White">



        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button
                        Click="Deconnexion"
                        Content="Déconnexion"
                        Cursor="Hand" />
                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />
        </DockPanel>



        <TabControl Margin="0,32,0,0">



            <TabItem Header=" Visualiser commandes ">
                <DataGrid
                    Name="dgClients"
                    Grid.Column="1"
                    Width="1600"
                    Height="300"
                    MinHeight="150"
                    Margin="0,50,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding LesClients}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Nom}"
                            Header="Numero Commande" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Prenom}"
                            Header="Numero Magasin" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Mode de Transport" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Date de Commande" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Date de Livraison" />
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Telephone}"
                            Header="Mode de Livraison" />
                    </DataGrid.Columns>
                </DataGrid>

            </TabItem>


            <TabItem Header=" Nouvelle commande ">

                <StackPanel
                    Height="694"
                    Margin="25"
                    VerticalAlignment="Top">

                    <StackPanel Orientation="Horizontal">

                        <TextBox
                            x:Name="tbRecherche"
                            Width="300"
                            Height="30"
                            Padding="12,4,30,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            BorderThickness="1">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="15" />
                                </Style>
                            </TextBox.Resources>
                            <TextBox.Effect>
                                <DropShadowEffect ShadowDepth="1" Color="Gray" />
                            </TextBox.Effect>
                        </TextBox>
                        <Image
                            Width="16"
                            Height="16"
                            Margin="-40,0,0,0"
                            Source="/rsc/icone_recherche.png"
                            Stretch="Fill" />

                        <StackPanel Margin="20,0,0,0">
                            <Button
                                x:Name="btnFiltreCategorie"
                                Height="30"
                                Background="White"
                                BorderBrush="#FFABADB3"
                                Click="OuvrirFiltre"
                                Content="    Catégorie    "
                                Foreground="#FF828282">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <StackPanel x:Name="spFiltresCategorie" Margin="0,5,0,0" />
                        </StackPanel>

                        <StackPanel Margin="20,0,0,0">
                            <Button
                                x:Name="btnFiltrePrix"
                                Height="30"
                                Background="White"
                                BorderBrush="#FFABADB3"
                                Click="OuvrirFiltre"
                                Content="    Prix    "
                                Foreground="#FF828282">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <StackPanel x:Name="spFiltresPrix" Margin="0,5,0,0" />
                        </StackPanel>


                        <StackPanel Margin="20,0,0,0">
                            <Button
                                x:Name="btnFiltreCouleur"
                                Height="30"
                                Background="White"
                                BorderBrush="#FFABADB3"
                                Click="OuvrirFiltre"
                                Content="    Couleur    "
                                Foreground="#FF828282">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5" />
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <StackPanel x:Name="spFiltresCouleur" Margin="0,5,0,0" />
                        </StackPanel>

                    </StackPanel>



                    <StackPanel
                        Width="147"
                        Height="48"
                        Margin="0,500,0,0"
                        HorizontalAlignment="Right" />

                </StackPanel>

            </TabItem>





        </TabControl>



    </Grid>





</Window>
